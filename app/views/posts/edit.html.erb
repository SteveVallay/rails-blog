
<h1>Edit post</h1>
<%= form_for @post, url: post_path(@post.id) do |f| %>

  <% if @post and @post.errors.any? %>
  <div id="errorExplanation">
    <h2>
      <%=pluralize(@post.errors.count,"error") %> prohibited from this post:
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end -%>
    </ul>
  </div>
  <% end -%>
  <p>
    <%= f.label :title%>  </br>
    <%= f.text_field :title, size:"55",placeholder: "input title"%>
  </p>
  <p>
    <%= f.label :text%></br>
    <%= f.text_area :text, size:"40", placeholder: "input content"%>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', posts_path %>
