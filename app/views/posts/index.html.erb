<h1> Listing all posts </h1>
<div>
  <%= button_to "New post", new_post_path ,method: :get%>
  <br></br>
</div>

<table border="1">
    <tr>
        <th>Title</th>
        <th>Text</th>
    </tr>
    <% @posts.each  do |post| %>
      <tr>
          <td><%= post.title %></td>
          <td><%= post.text %></td>
      </tr>
     <% end %>
</table>
