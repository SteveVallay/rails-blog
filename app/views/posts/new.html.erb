
<%= form_for :post, url: posts_path do |f| %>

<div class="row collapse">
  <div class="small-3 columns">
    <%= f.label :title,class: "right inline"%>
  </div>
  <div class="small-9 columns">
    <%= f.text_field :title %> 
  </div>
</div>

<div class="row collapse">
  <div class="small-3 columns">
    <%= f.label :text, class: "right inline"%> 
  </div>
  <div class="small-9 columns">
    <%= f.text_area :text%>
  </div>
</div>
<div class="row"></div>
  <div class="small-colunm9 small-offset-3 columns">
      <%= f.submit class:"button round"%>
  </div>
</div>


<% end %>

<%= link_to 'Back', posts_path, class: "button round " %>
